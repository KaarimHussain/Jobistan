    <input type="text" name="form_phone" placeholder="Phone">
    <input type="text" name="form_address" placeholder="Address">
    <input type="date" name="form_dob" placeholder="Date of Birth">
    <textarea name="form_summary" placeholder="Summary"></textarea>
    <input type="text" name="form_job_title1" placeholder="Job Title 1">
    <input type="text" name="form_company_name" placeholder="Company Name">
    <input type="date" name="form_job_duration_start" placeholder="Job Duration Start">
    <input type="date" name="form_job_duration_end" placeholder="Job Duration End">
    <textarea name="form_job_description" placeholder="Job Description"></textarea>
    <input type="text" name="form_education_name" placeholder="Education Name">
    <textarea name="form_education_description" placeholder="Education Description"></textarea>
    <input type="text" name="form_education_name2" placeholder="Education Name 2">
    <textarea name="form_education_description2" placeholder="Education Description 2"></textarea>
    <input type="text" name="form_education_name3" placeholder="Education Name 3">
    <textarea name="form_education_description3" placeholder="Education Description 3"></textarea>
    <textarea name="form_skills" placeholder="Skills"></textarea>
    <textarea name="language_list" placeholder="Languages"></textarea>
